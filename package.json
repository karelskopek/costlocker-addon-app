{
  "name": "costlocker-desktop",
  "productName": "Costlocker Desktop",
  "version": "0.3.2",
  "description": "Costlocker Electron application.",
  "main": "main/index.js",
  "repository": "git@github.com:karelskopek/costlocker-addon-app.git",
  "author": "Costlocker <hello@costlocker.com>",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": "^8.9.3",
    "npm": "^5.5.0",
    "yarn": "^1.3.2"
  },
  "scripts": {
    "dist": "electron-builder --win --mac",
    "dist:mac": "electron-builder --mac",
    "dist:win": "electron-builder --win",
    "icons": "electron-icon-maker --input=./assets/icons/main.png --output=./build",
    "lint": "eslint .",
    "pack": "electron-builder --dir",
    "start": "electron .",
    "start:dev": "nodemon ./node_modules/.bin/electron .",
    "release": "build"
  },
  "build": {
    "dmg": {
      "title": "${productName}"
    },
    "mac": {
      "icon": "build/icons/mac/icon.icns",
      "publish": {
        "provider": "github"
      }
    },
    "win": {
      "icon": "build/icons/win/icon.ico",
      "publish": {
        "provider": "github"
      },
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    }
  },
  "devDependencies": {
    "devtron": "1.4.0",
    "electron": "1.8.2",
    "electron-builder": "20.2.1",
    "electron-icon-maker": "0.0.4",
    "eslint": "4.18.2",
    "eslint-config-airbnb-base": "12.1.0",
    "eslint-plugin-import": "2.9.0",
    "nodemon": "1.17.1"
  },
  "dependencies": {
    "electron-is-dev": "0.3.0",
    "electron-log": "2.2.14",
    "electron-updater": "2.21.0"
  }
}
